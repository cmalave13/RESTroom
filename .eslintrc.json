{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["warn", 2],
        "no-unused-vars": ["off", { "vars": "local" }],
        "prefer-const": "warn",
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "space-infix-ops": "warn"
    },
    "settings": {
        "react": {"version": "detect"}
    }
}
